@model IEnumerable<AuthorAndBooks.Models.Book>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewBooks</title>
</head>
<body>
    <p>
        @Html.ActionLink("Add New Book", "Create",null, new {@class="btn btn-primary"})
    </p>
    <table class="table" width="50%" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Options
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Name)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td style="width:600px;">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit","book", new { id=item.Id },null) |
                @Html.ActionLink("Delete", "Delete","book", new { id=item.Id },null)
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
